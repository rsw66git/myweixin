/* pages/regist/regist.wxss */
.content{
  width:100%;
  height: 100vh;
  background-color: #f7ad0d;
  padding-top:60rpx;
}
.hr{
  padding-top:40px;
}
.item{
  margin:0px auto;
  border:1px solid #ccc;
  height:40px;
  width:90%;
  border-radius: 30px;
  background-color: #fff;
  margin-bottom: 15px;
}

.item input{
  height:40px;
  line-height: 40px;
  margin-left:10px;
}

.holder{
  font-size:14px;
  color:#999;
}

.flex{
  display:flex;
  flex-direction: row;
}

.flex input{
  width:300px;
}

.item switch{
  margin-top:4px;
  margin-right:5px;
}
.content .btn{
  width:90%;
  border-radius: 30px;
  margin-top:40px;
}